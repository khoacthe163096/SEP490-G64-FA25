@model vn.fpt.edu.viewmodels.ComponentViewModel
@{
    ViewData["Title"] = "Chỉnh sửa linh kiện";
    Layout = "~/vn.fpt.edu.views/Shared/_DashboardLayout.cshtml";
    var types = ViewBag.TypeComponents as List<vn.fpt.edu.viewmodels.TypeComponentLookupViewModel> ?? new List<vn.fpt.edu.viewmodels.TypeComponentLookupViewModel>();
}

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-8 mx-auto">
            <div class="card mt-3 shadow-sm">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0"><i class="fas fa-edit"></i> Chỉnh sửa linh kiện</h5>
                    <a href="/Components" class="btn btn-outline-secondary btn-sm">
                        <i class="fas fa-arrow-left"></i> Quay lại
                    </a>
                </div>
                <div class="card-body">
                    <form id="editForm">
                        <input type="hidden" id="Id" value="@Model.Id" />

                        <div class="mb-3">
                            <label class="form-label fw-bold">Tên linh kiện</label>
                            <input type="text" class="form-control" id="Name" value="@Model.Name">
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Mã linh kiện</label>
                            <input type="text" class="form-control" id="Code" value="@Model.Code">
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label class="form-label fw-bold">Giá bán (VNĐ)</label>
                                <input type="number" class="form-control" id="UnitPrice" value="@Model.UnitPrice">
                            </div>
                            <div class="col-md-6">
                                <label class="form-label fw-bold">Giá nhập (VNĐ)</label>
                                <input type="number" class="form-control" id="PurchasePrice" value="@Model.PurchasePrice">
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Số lượng tồn</label>
                            <input type="number" class="form-control" id="QuantityStock" value="@Model.QuantityStock">
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Loại linh kiện</label>
                            <select id="TypeComponentId" class="form-select">
                                <option value="">-- Chọn loại --</option>
                                @foreach (var t in types)
                                {
                                    var isSelected = Model?.TypeComponentId == t.Id ? "selected" : null;
                                    <option value="@t.Id" selected="@isSelected">@t.Name</option>
                                }
                            </select>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Ảnh (URL)</label>
                            <input type="text" class="form-control" id="ImageUrl" value="@Model.ImageUrl">
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Trạng thái</label>
                            <select id="StatusCode" class="form-select">
                                <option value="ACTIVE" selected="@(Model?.StatusCode == "ACTIVE" ? "selected" : null)">Có sẵn</option>
                                <option value="OUT_OF_STOCK" selected="@(Model?.StatusCode == "OUT_OF_STOCK" ? "selected" : null)">Hết hàng</option>
                                <option value="DISCONTINUED" selected="@(Model?.StatusCode == "DISCONTINUED" ? "selected" : null)">Ngừng sản xuất</option>
                            </select>
                        </div>

                        <div class="text-end">
                            <button type="submit" class="btn btn-primary px-4">
                                <i class="fas fa-save"></i> Lưu thay đổi
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(function() {
            $('#editForm').on('submit', function(e) {
                e.preventDefault();
                const id = $('#Id').val();
                const data = {
                    Name: $('#Name').val(),
                    Code: $('#Code').val(),
                    UnitPrice: parseFloat($('#UnitPrice').val()) || 0,
                    PurchasePrice: parseFloat($('#PurchasePrice').val()) || 0,
                    QuantityStock: parseInt($('#QuantityStock').val()) || 0,
                    TypeComponentId: $('#TypeComponentId').val() ? parseInt($('#TypeComponentId').val()) : null,
                    ImageUrl: $('#ImageUrl').val(),
                    StatusCode: $('#StatusCode').val()
                };
                $.post(`/Components/Edit/${id}`, data)
                    .done(res => {
                        if (res.success) {
                            alert("Cập nhật thành công!");
                            window.location = '/Components';
                        } else {
                            alert(res.message || "Cập nhật thất bại");
                        }
                    })
                    .fail(() => alert("Lỗi server!"));
            });
        });
    </script>
}
