@model IEnumerable<FE.vn.fpt.edu.viewmodels.CarOfAutoOwnerViewModel>

@{
    ViewData["Title"] = "Danh sách xe của Auto Owner";
    Layout = "~/vn.fpt.edu.views/Shared/_DashboardLayout.cshtml";
}

<div class="container-fluid">
    <div class="card shadow-sm">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h4 class="mb-0">
                <i class="fas fa-car"></i> Danh sách xe của Auto Owner
            </h4>
            <div>
                <a href="/Users/Details/@ViewBag.OwnerId" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Quay lại người dùng
                </a>
                <a href="/CarOfAutoOwner/Create?ownerId=@ViewBag.OwnerId" class="btn btn-success">
                    <i class="fas fa-plus"></i> Thêm xe mới
                </a>
            </div>
        </div>

        <div class="card-body">
            @if (Model != null && Model.Any())
            {
                <table class="table table-bordered table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>ID</th>
                            <th>Tên xe</th>
                            <th>Biển số</th>
                            <th>Năm sản xuất</th>
                            <th>Ngày tạo</th>
                            <th>Hành động</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var car in Model)
                        {
                            <tr>
                                <td>@car.Id</td>
                                <td>@car.CarName</td>
                                <td>@car.LicensePlate</td>
                                
                               
                                <td>@car.YearOfManufacture</td>
                                <td>@car.CreatedDate?.ToString("dd/MM/yyyy")</td>

                                
                                <td>
                                    <a href="/CarOfAutoOwner/Edit/@car.Id" class="btn btn-warning btn-sm">
                                        <i class="fas fa-edit"></i> Sửa
                                    </a>
                                    <form asp-action="Delete" method="post" asp-route-id="@car.Id" asp-route-ownerId="@car.UserId"
                                          style="display:inline;"
                                          onsubmit="return confirm('Bạn có chắc chắn muốn xóa xe này không?');">
                                        <button type="submit" class="btn btn-sm btn-danger">Xóa</button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="alert alert-info text-center">Không có xe nào của người dùng này.</div>
            }
        </div>
    </div>
</div>
