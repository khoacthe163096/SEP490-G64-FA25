@model FE.vn.fpt.edu.viewmodels.TypeComponentViewModel
@{
    ViewData["Title"] = "Chỉnh sửa loại linh kiện";
    Layout = "~/vn.fpt.edu.views/Shared/_DashboardLayout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-8 mx-auto">
            <div class="card shadow-sm mt-3">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Chỉnh sửa loại linh kiện</h5>
                    <a href="@Url.Action("Index", "TypeComponent")" class="btn btn-light btn-sm">
                        <i class="fas fa-arrow-left"></i> Quay lại
                    </a>
                </div>
                <div class="card-body">
                    <form id="editForm">
                        <input type="hidden" id="Id" value="@Model.Id" />

                        <div class="mb-3">
                            <label class="form-label">Tên loại linh kiện</label>
                            <input type="text" class="form-control" id="Name" value="@Model.Name" required />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Mô tả</label>
                            <textarea class="form-control" id="Description" rows="3">@Model.Description</textarea>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Chi nhánh</label>
                            <input type="number" class="form-control" id="BranchId" value="@Model.BranchId" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Trạng thái</label>
                            <select class="form-select" id="StatusCode">
                                <option value="ACTIVE" selected="@(Model.StatusCode == "ACTIVE")">Hoạt động</option>
                                <option value="INACTIVE" selected="@(Model.StatusCode == "INACTIVE")">Không hoạt động</option>
                            </select>
                        </div>

                        <div class="d-flex justify-content-end">
                            <button type="submit" class="btn btn-success">
                                <i class="fas fa-save"></i> Cập nhật
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(function() {
            $('#editForm').on('submit', function(e) {
                e.preventDefault();

                const id = $('#Id').val();
                const payload = {
                    Id: id,
                    Name: $('#Name').val(),
                    Description: $('#Description').val(),
                    BranchId: $('#BranchId').val() ? parseInt($('#BranchId').val()) : null,
                    StatusCode: $('#StatusCode').val()
                };

                $.ajax({
                    url: '@Url.Action("Edit", "TypeComponent")/' + id,
                    type: 'POST',
                    data: payload,
                    success: function(res) {
                        if (res && res.success) {
                            showAlert('Cập nhật thành công!', 'success');
                            setTimeout(() => window.location.href = '@Url.Action("Index", "TypeComponent")', 1000);
                        } else {
                            showAlert(res.message || 'Không thể cập nhật!', 'danger');
                        }
                    },
                    error: function() {
                        showAlert('Lỗi khi gọi API!', 'danger');
                    }
                });
            });
        });

        function showAlert(message, type = 'info') {
            const alertDiv = document.createElement('div');
            alertDiv.className = `alert alert-${type} alert-dismissible fade show position-fixed`;
            alertDiv.style.cssText = 'top: 20px; right: 20px; z-index: 9999; min-width: 300px; box-shadow: 0 4px 6px rgba(0,0,0,0.1);';
            alertDiv.innerHTML = `
                <i class="fas fa-${type === 'success' ? 'check-circle' : type === 'danger' ? 'exclamation-circle' : type === 'warning' ? 'exclamation-triangle' : 'info-circle'} me-2"></i>${message}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            `;
            document.body.appendChild(alertDiv);

            setTimeout(() => {
                if (alertDiv.parentNode) {
                    alertDiv.remove();
                }
            }, 3000);
        }
    </script>
}
