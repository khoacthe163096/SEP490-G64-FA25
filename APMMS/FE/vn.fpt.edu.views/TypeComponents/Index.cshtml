@{
    ViewData["Title"] = "Danh sách loại linh kiện";
    Layout = "~/vn.fpt.edu.views/Shared/_DashboardLayout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h4 class="mb-0">Danh sách loại linh kiện</h4>
                    <a href="/TypeComponents/Create" class="btn btn-primary">
                        <i class="fas fa-plus"></i> Thêm loại mới
                    </a>
                </div>
                <div class="card-body">
                    <!-- Search and Filter -->
                    <div class="row mb-3">
                        <div class="col-md-4">
                            <input type="text" class="form-control" id="searchInput" placeholder="Tìm kiếm loại linh kiện...">
                        </div>
                        <div class="col-md-2">
                            <select class="form-select" id="statusFilter">
                                <option value="">Tất cả trạng thái</option>
                                <option value="ACTIVE">Hoạt động</option>
                                <option value="INACTIVE">Không hoạt động</option>
                            </select>
                        </div>
                        <div class="col-md-2">
                            <button class="btn btn-outline-secondary" id="filterBtn">
                                <i class="fas fa-filter"></i> Lọc
                            </button>
                        </div>
                    </div>

                    <!-- Table -->
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th><input type="checkbox" id="selectAll"></th>
                                    <th>Mã loại</th>
                                    <th>Tên loại</th>
                                    <th>Mô tả</th>
                                    <th>Số linh kiện</th>
                                    <th>Trạng thái</th>
                                    <th>Ngày tạo</th>
                                    <th>Thao tác</th>
                                </tr>
                            </thead>
                            <tbody id="typeComponentsTable">
                                <tr>
                                    <td><input type="checkbox"></td>
                                    <td>TL001</td>
                                    <td>Động cơ</td>
                                    <td>Các linh kiện liên quan đến động cơ</td>
                                    <td>25</td>
                                    <td><span class="badge bg-success">Hoạt động</span></td>
                                    <td>01/10/2024</td>
                                    <td>
                                        <a href="/TypeComponents/Details/1" class="btn btn-sm btn-outline-info">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a href="/TypeComponents/Edit/1" class="btn btn-sm btn-outline-primary">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <button class="btn btn-sm btn-outline-danger" onclick="deleteTypeComponent(1)">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </td>
                                </tr>
                                <tr>
                                    <td><input type="checkbox"></td>
                                    <td>TL002</td>
                                    <td>Phanh</td>
                                    <td>Các linh kiện hệ thống phanh</td>
                                    <td>18</td>
                                    <td><span class="badge bg-success">Hoạt động</span></td>
                                    <td>02/10/2024</td>
                                    <td>
                                        <a href="/TypeComponents/Details/2" class="btn btn-sm btn-outline-info">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a href="/TypeComponents/Edit/2" class="btn btn-sm btn-outline-primary">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <button class="btn btn-sm btn-outline-danger" onclick="deleteTypeComponent(2)">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>

                    <!-- Pagination -->
                    <nav aria-label="Page navigation">
                        <ul class="pagination justify-content-center">
                            <li class="page-item disabled">
                                <a class="page-link" href="#" tabindex="-1">Trước</a>
                            </li>
                            <li class="page-item active">
                                <a class="page-link" href="#">1</a>
                            </li>
                            <li class="page-item">
                                <a class="page-link" href="#">2</a>
                            </li>
                            <li class="page-item">
                                <a class="page-link" href="#">3</a>
                            </li>
                            <li class="page-item">
                                <a class="page-link" href="#">Sau</a>
                            </li>
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        let currentPage = 1;
        let pageSize = 10;

        // Load data when page loads
        document.addEventListener('DOMContentLoaded', function() {
            loadTypeComponents();
            
            // Event listeners
            document.getElementById('filterBtn').addEventListener('click', applyFilters);
            document.getElementById('searchInput').addEventListener('keyup', function(e) {
                if (e.key === 'Enter') applyFilters();
            });
        });

        // Load type components from API
        async function loadTypeComponents() {
            try {
                const response = await fetch('https://localhost:7173/api/TypeComponent');
                const result = await response.json();
                
                if (result.success) {
                    displayTypeComponents(result.data);
                } else {
                    showAlert('Lỗi khi tải dữ liệu: ' + result.message, 'danger');
                }
            } catch (error) {
                console.error('Error loading type components:', error);
                showAlert('Lỗi khi tải dữ liệu', 'danger');
            }
        }

        // Display type components in table
        function displayTypeComponents(typeComponents) {
            const tbody = document.getElementById('typeComponentsTable');
            tbody.innerHTML = '';
            
            typeComponents.forEach((typeComponent, index) => {
                const row = document.createElement('tr');
                const statusBadge = getStatusBadge(typeComponent.componentCount);
                
                row.innerHTML = `
                    <td><input type="checkbox" class="type-component-checkbox" value="${typeComponent.id}"></td>
                    <td>TC${typeComponent.id.toString().padStart(3, '0')}</td>
                    <td>${typeComponent.name}</td>
                    <td>${typeComponent.description || '-'}</td>
                    <td>${typeComponent.componentCount}</td>
                    <td>${statusBadge}</td>
                    <td>${new Date().toLocaleDateString('vi-VN')}</td>
                    <td>
                        <a href="/TypeComponents/Details/${typeComponent.id}" class="btn btn-sm btn-outline-info">
                            <i class="fas fa-eye"></i>
                        </a>
                        <a href="/TypeComponents/Edit/${typeComponent.id}" class="btn btn-sm btn-outline-primary">
                            <i class="fas fa-edit"></i>
                        </a>
                        <button class="btn btn-sm btn-outline-danger" onclick="deleteTypeComponent(${typeComponent.id})">
                            <i class="fas fa-trash"></i>
                        </button>
                    </td>
                `;
                tbody.appendChild(row);
            });
        }

        // Get status badge based on component count
        function getStatusBadge(componentCount) {
            if (componentCount > 0) {
                return '<span class="badge bg-success">Hoạt động</span>';
            } else {
                return '<span class="badge bg-warning">Không hoạt động</span>';
            }
        }

        // Apply filters
        function applyFilters() {
            currentPage = 1;
            loadTypeComponents();
        }

        // Delete type component
        async function deleteTypeComponent(id) {
            if (confirm('Bạn có chắc chắn muốn xóa loại linh kiện này? Tất cả linh kiện thuộc loại này cũng sẽ bị ảnh hưởng.')) {
                try {
                    const response = await fetch(`https://localhost:7173/api/TypeComponent/${id}`, {
                        method: 'DELETE'
                    });
                    const result = await response.json();
                    
                    if (result.success) {
                        showAlert('Xóa loại linh kiện thành công!', 'success');
                        loadTypeComponents();
                    } else {
                        showAlert('Lỗi khi xóa: ' + result.message, 'danger');
                    }
                } catch (error) {
                    console.error('Error deleting type component:', error);
                    showAlert('Lỗi khi xóa loại linh kiện', 'danger');
                }
            }
        }

        // Show alert
        function showAlert(message, type) {
            const alertDiv = document.createElement('div');
            alertDiv.className = `alert alert-${type} alert-dismissible fade show`;
            alertDiv.innerHTML = `
                ${message}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            `;
            
            const container = document.querySelector('.container-fluid');
            container.insertBefore(alertDiv, container.firstChild);
            
            // Auto remove after 5 seconds
            setTimeout(() => {
                alertDiv.remove();
            }, 5000);
        }
    </script>
}
