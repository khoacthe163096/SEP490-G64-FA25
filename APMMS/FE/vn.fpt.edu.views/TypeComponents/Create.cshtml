@model FE.vn.fpt.edu.viewmodels.TypeComponentViewModel
@{
    ViewData["Title"] = "Thêm loại linh kiện";
    Layout = "~/vn.fpt.edu.views/Shared/_DashboardLayout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-8 mx-auto">
            <div class="card shadow-sm mt-3">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Thêm loại linh kiện mới</h5>
                    <a href="@Url.Action("Index", "TypeComponent")" class="btn btn-light btn-sm">
                        <i class="fas fa-arrow-left"></i> Quay lại
                    </a>
                </div>
                <div class="card-body">
                    <form id="createForm">
                        <div class="mb-3">
                            <label class="form-label">Tên loại linh kiện <span class="text-danger">*</span></label>
                            <input type="text" class="form-control" id="Name" name="Name" required />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Mô tả</label>
                            <textarea class="form-control" id="Description" name="Description" rows="3"></textarea>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Chi nhánh</label>
                            <input type="number" class="form-control" id="BranchId" name="BranchId" placeholder="Nhập ID chi nhánh (nếu có)" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Trạng thái</label>
                            <select class="form-select" id="StatusCode" name="StatusCode">
                                <option value="ACTIVE" selected>Hoạt động</option>
                                <option value="INACTIVE">Không hoạt động</option>
                            </select>
                        </div>

                        <div class="d-flex justify-content-end">
                            <button type="submit" class="btn btn-success">
                                <i class="fas fa-save"></i> Lưu
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(function() {
            $('#createForm').on('submit', function(e) {
                e.preventDefault();

                const payload = {
                    Name: $('#Name').val(),
                    Description: $('#Description').val(),
                    BranchId: $('#BranchId').val() ? parseInt($('#BranchId').val()) : null,
                    StatusCode: $('#StatusCode').val()
                };

                $.ajax({
                    url: '@Url.Action("Create", "TypeComponent")',
                    type: 'POST',
                    data: payload,
                    success: function(res) {
                        if (res && res.success) {
                            alert('Tạo loại linh kiện thành công!');
                            window.location.href = '@Url.Action("Index", "TypeComponent")';
                        } else {
                            alert(res.message || 'Không thể tạo loại linh kiện!');
                        }
                    },
                    error: function() {
                        alert('Lỗi khi gọi API!');
                    }
                });
            });
        });
    </script>
}