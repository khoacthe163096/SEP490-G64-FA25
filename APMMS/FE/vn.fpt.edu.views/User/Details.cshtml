@{
    ViewData["Title"] = "Chi tiết người dùng";
    Layout = "~/vn.fpt.edu.views/Shared/_DashboardLayout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h4 class="mb-0">Chi tiết người dùng</h4>
                    <div>
                        <a href="/Users/Edit/@ViewBag.UserId" class="btn btn-warning">
                            <i class="fas fa-edit"></i> Sửa
                        </a>
                        <a href="/CarOfAutoOwner/Index?ownerId=@ViewBag.UserId" class="btn btn-primary">
                            Xem danh sách xe
                        </a>
                        <a href="/Users" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Quay lại
                        </a>
                    </div>
                </div>

                <div class="card-body">
                    <!-- Loading -->
                    <div id="loadingSpinner" class="text-center">
                        <div class="spinner-border" role="status">
                            <span class="visually-hidden">Đang tải...</span>
                        </div>
                    </div>

                    <!-- User Details -->
                    <div id="userDetails" style="display: none;">
                        <div class="row">
                            <!-- CỘT TRÁI -->
                            <div class="col-md-6">
                                <h5>Thông tin cá nhân</h5>
                                <hr>

                                <!-- Ảnh đại diện -->
                                <div class="text-center mb-3">
                                    <img id="userImage" src="/images/default-avatar.png" alt="User Image"
                                         class="rounded-circle border shadow-sm"
                                         width="120" height="120"
                                         style="object-fit: cover;">
                                </div>

                                <div class="mb-2"><strong>ID:</strong> <span id="userId">-</span></div>
                                <div class="mb-2"><strong>Họ tên:</strong> <span id="fullName">-</span></div>
                                <div class="mb-2"><strong>Giới tính:</strong> <span id="gender">-</span></div>
                                <div class="mb-2"><strong>Ngày sinh:</strong> <span id="dob">-</span></div>
                                <div class="mb-2"><strong>Email:</strong> <span id="email">-</span></div>
                                <div class="mb-2"><strong>Số điện thoại:</strong> <span id="phoneNumber">-</span></div>
                                <div class="mb-2"><strong>Địa chỉ:</strong> <span id="address">-</span></div>
                                <div class="mb-2"><strong>CCCD:</strong> <span id="citizenId">-</span></div>
                                <div class="mb-2"><strong>Chi nhánh:</strong> <span id="branchName">-</span></div>
                            </div>

                            <!-- CỘT PHẢI -->
                            <div class="col-md-6">
                                <h5>Thông tin tài khoản</h5>
                                <hr>

                                <div class="mb-2"><strong>Tên đăng nhập:</strong> <span id="username">-</span></div>
                                <div class="mb-2"><strong>Vai trò:</strong> <span id="roleName">-</span></div>
                                <div class="mb-2"><strong>Trạng thái:</strong> <span id="status">-</span></div>
                                <div class="mb-2"><strong>Ngày tạo:</strong> <span id="createdDate">-</span></div>
                                <div class="mb-2"><strong>Lần cập nhật gần nhất:</strong> <span id="lastModified">-</span></div>
                            </div>
                        </div>
                    </div>

                    <!-- Error Message -->
                    <div id="errorMessage" class="alert alert-danger mt-3" style="display: none;">
                        <i class="fas fa-exclamation-triangle"></i>
                        <span id="errorText">Có lỗi xảy ra khi tải thông tin người dùng</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const userId = getUserIdFromUrl();
            if (userId) {
                loadUserDetails(userId);
            } else {
                showError('Không tìm thấy ID người dùng');
            }
        });

        function getUserIdFromUrl() {
            const segments = window.location.pathname.split('/');
            return segments[segments.length - 1];
        }

        function loadUserDetails(id) {
            fetch(`https://localhost:7173/api/AutoOwner/${id}`)
                .then(response => {
                    if (!response.ok) throw new Error(`Server returned ${response.status}`);
                    return response.json();
                })
                .then(user => {
                    document.getElementById('loadingSpinner').style.display = 'none';
                    displayUserDetails(user);
                })
                .catch(error => {
                    console.error('Error:', error);
                    document.getElementById('loadingSpinner').style.display = 'none';
                    showError('Không tìm thấy người dùng hoặc có lỗi khi tải dữ liệu.');
                });
        }

        function displayUserDetails(user) {
            // Ảnh đại diện
            const userImage = document.getElementById('userImage');
            if (user.image && user.image !== "null") {
                userImage.src = user.image.startsWith('http') ? user.image : `/uploads/${user.image}`;
            } else {
                userImage.src = '/images/default-avatar.png';
            }

            // Thông tin cá nhân
            document.getElementById('userId').textContent = user.id || '-';
            document.getElementById('fullName').textContent = `${user.firstName || ''} ${user.lastName || ''}`.trim() || '-';
            document.getElementById('gender').textContent = user.gender || '-';
            document.getElementById('dob').textContent = user.dob
                ? new Date(user.dob).toLocaleDateString('vi-VN')
                : '-';
            document.getElementById('email').textContent = user.email || '-';
            document.getElementById('phoneNumber').textContent = user.phone || '-';
            document.getElementById('address').textContent = user.address || '-';
            document.getElementById('citizenId').textContent = user.citizenId || '-';
            document.getElementById('branchName').textContent = user.branch?.name || (`${user.branchName ?? '-'}`);

            // Thông tin tài khoản
            document.getElementById('username').textContent = user.username || '-';
            document.getElementById('roleName').innerHTML = `<span class="badge bg-info">${user.roleName || 'Auto Owner'}</span>`;
            document.getElementById('status').innerHTML = user.statusCode === 'ACTIVE'
                ? '<span class="badge bg-success">Hoạt động</span>'
                : '<span class="badge bg-secondary">Không hoạt động</span>';

            document.getElementById('createdDate').textContent = user.createdDate
                ? new Date(user.createdDate).toLocaleString('vi-VN')
                : '-';
            document.getElementById('lastModified').textContent = user.lastModifiedDate
                ? new Date(user.lastModifiedDate).toLocaleString('vi-VN')
                : '-';

            // Hiển thị
            document.getElementById('userDetails').style.display = 'block';
        }

        function showError(message) {
            document.getElementById('errorText').textContent = message;
            document.getElementById('errorMessage').style.display = 'block';
        }
    </script>
}
