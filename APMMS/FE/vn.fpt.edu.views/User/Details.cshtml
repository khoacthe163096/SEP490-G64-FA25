@{
    ViewData["Title"] = "Chi tiết người dùng";
    Layout = "~/vn.fpt.edu.views/Shared/_DashboardLayout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h4 class="mb-0">Chi tiết người dùng</h4>
                    <div>
                        <a href="/Users/Edit/@ViewBag.UserId" class="btn btn-warning">
                            <i class="fas fa-edit"></i> Sửa
                        </a>
                        <a href="/Users" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Quay lại
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <div id="loadingSpinner" class="text-center">
                        <div class="spinner-border" role="status">
                            <span class="visually-hidden">Đang tải...</span>
                        </div>
                    </div>
                    
                    <div id="userDetails" style="display: none;">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-4">
                                    <h5>Thông tin cá nhân</h5>
                                    <hr>
                                    <div class="row mb-2">
                                        <div class="col-sm-4"><strong>ID:</strong></div>
                                        <div class="col-sm-8" id="userId">-</div>
                                    </div>
                                    <div class="row mb-2">
                                        <div class="col-sm-4"><strong>Họ tên:</strong></div>
                                        <div class="col-sm-8" id="fullName">-</div>
                                    </div>
                                    <div class="row mb-2">
                                        <div class="col-sm-4"><strong>Email:</strong></div>
                                        <div class="col-sm-8" id="email">-</div>
                                    </div>
                                    <div class="row mb-2">
                                        <div class="col-sm-4"><strong>Số điện thoại:</strong></div>
                                        <div class="col-sm-8" id="phoneNumber">-</div>
                                    </div>
                                    <div class="row mb-2">
                                        <div class="col-sm-4"><strong>Địa chỉ:</strong></div>
                                        <div class="col-sm-8" id="address">-</div>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="col-md-6">
                                <div class="mb-4">
                                    <h5>Thông tin tài khoản</h5>
                                    <hr>
                                    <div class="row mb-2">
                                        <div class="col-sm-4"><strong>Tên đăng nhập:</strong></div>
                                        <div class="col-sm-8" id="username">-</div>
                                    </div>
                                    <div class="row mb-2">
                                        <div class="col-sm-4"><strong>Vai trò:</strong></div>
                                        <div class="col-sm-8" id="roleName">-</div>
                                    </div>
                                    <div class="row mb-2">
                                        <div class="col-sm-4"><strong>Trạng thái:</strong></div>
                                        <div class="col-sm-8" id="status">-</div>
                                    </div>
                                    <div class="row mb-2">
                                        <div class="col-sm-4"><strong>Ngày tạo:</strong></div>
                                        <div class="col-sm-8" id="createdDate">-</div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Additional Information -->
                        <div class="row">
                            <div class="col-12">
                                <h5>Thông tin bổ sung</h5>
                                <hr>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="row mb-2">
                                            <div class="col-sm-4"><strong>Lần đăng nhập cuối:</strong></div>
                                            <div class="col-sm-8" id="lastLogin">-</div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="row mb-2">
                                            <div class="col-sm-4"><strong>Ghi chú:</strong></div>
                                            <div class="col-sm-8" id="notes">-</div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div id="errorMessage" class="alert alert-danger" style="display: none;">
                        <i class="fas fa-exclamation-triangle"></i>
                        <span id="errorText">Có lỗi xảy ra khi tải thông tin người dùng</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const userId = getUserIdFromUrl();
            if (userId) {
                loadUserDetails(userId);
            } else {
                showError('Không tìm thấy ID người dùng');
            }
        });

        function getUserIdFromUrl() {
            const path = window.location.pathname;
            const segments = path.split('/');
            return segments[segments.length - 1];
        }

        function loadUserDetails(id) {
            fetch(`/api/User/${id}`, {
                headers: {
                    'Authorization': `Bearer ${localStorage.getItem('token')}`
                }
            })
            .then(response => response.json())
            .then(data => {
                document.getElementById('loadingSpinner').style.display = 'none';
                
                if (data.success) {
                    displayUserDetails(data.data);
                } else {
                    showError('Lỗi khi tải thông tin: ' + data.message);
                }
            })
            .catch(error => {
                console.error('Error:', error);
                document.getElementById('loadingSpinner').style.display = 'none';
                showError('Có lỗi xảy ra khi tải thông tin người dùng');
            });
        }

        function displayUserDetails(user) {
            document.getElementById('userId').textContent = user.id || '-';
            document.getElementById('fullName').textContent = `${user.firstName || ''} ${user.lastName || ''}`.trim() || '-';
            document.getElementById('email').textContent = user.email || '-';
            document.getElementById('phoneNumber').textContent = user.phoneNumber || '-';
            document.getElementById('address').textContent = user.address || '-';
            document.getElementById('username').textContent = user.username || '-';
            document.getElementById('roleName').innerHTML = user.roleName ? 
                `<span class="badge bg-info">${user.roleName}</span>` : '-';
            document.getElementById('status').innerHTML = user.isActive ? 
                '<span class="badge bg-success">Hoạt động</span>' : 
                '<span class="badge bg-secondary">Không hoạt động</span>';
            document.getElementById('createdDate').textContent = user.createdDate ? 
                new Date(user.createdDate).toLocaleString('vi-VN') : '-';
            document.getElementById('lastLogin').textContent = user.lastLogin ? 
                new Date(user.lastLogin).toLocaleString('vi-VN') : '-';
            document.getElementById('notes').textContent = user.notes || '-';
            
            document.getElementById('userDetails').style.display = 'block';
        }

        function showError(message) {
            document.getElementById('errorText').textContent = message;
            document.getElementById('errorMessage').style.display = 'block';
        }
    </script>
}
