@{
    ViewData["Title"] = "Tạo phiếu bảo dưỡng mới";
    Layout = "~/vn.fpt.edu.views/Shared/_DashboardLayout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="mb-0">Tạo phiếu bảo dưỡng mới</h4>
                </div>
                <div class="card-body">
                    <form>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Xe <span class="text-danger">*</span></label>
                                    <select class="form-select" required>
                                        <option value="">Chọn xe</option>
                                        <option value="1">Toyota Camry - 30A-12345</option>
                                        <option value="2">Honda Civic - 30B-67890</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Khách hàng <span class="text-danger">*</span></label>
                                    <select class="form-select" required>
                                        <option value="">Chọn khách hàng</option>
                                        <option value="1">Nguyễn Văn A</option>
                                        <option value="2">Trần Thị B</option>
                                    </select>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Kỹ thuật viên <span class="text-danger">*</span></label>
                                    <select class="form-select" required>
                                        <option value="">Chọn kỹ thuật viên</option>
                                        <option value="1">Bùi Văn Giang</option>
                                        <option value="2">Bùi Trọng Đạt</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Chi nhánh <span class="text-danger">*</span></label>
                                    <select class="form-select" required>
                                        <option value="">Chọn chi nhánh</option>
                                        <option value="1">Chi nhánh Hà Nội</option>
                                        <option value="2">Chi nhánh TP.HCM</option>
                                    </select>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Gói dịch vụ</label>
                                    <select class="form-select">
                                        <option value="">Chọn gói dịch vụ</option>
                                        <option value="1">Bảo dưỡng định kỳ</option>
                                        <option value="2">Sửa chữa khẩn cấp</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label">Trạng thái</label>
                                    <select class="form-select">
                                        <option value="PENDING">Chờ xử lý</option>
                                        <option value="IN_PROGRESS">Đang xử lý</option>
                                    </select>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Mô tả</label>
                            <textarea class="form-control" rows="4" placeholder="Nhập mô tả chi tiết..."></textarea>
                        </div>

                        <div class="d-flex justify-content-end gap-2">
                            <a href="/MaintenanceTickets" class="btn btn-secondary">
                                <i class="fas fa-times"></i> Hủy
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> Tạo phiếu
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
