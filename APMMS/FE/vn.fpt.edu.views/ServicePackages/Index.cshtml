@{
    ViewData["Title"] = "Danh sách gói dịch vụ";
    Layout = "~/vn.fpt.edu.views/Shared/_DashboardLayout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h4 class="mb-0">Danh sách gói dịch vụ</h4>
                    <a href="/ServicePackages/Create" class="btn btn-primary">
                        <i class="fas fa-plus"></i> Tạo gói mới
                    </a>
                </div>
                <div class="card-body">
                    <!-- Search and Filter -->
                    <div class="row mb-3">
                        <div class="col-md-4">
                            <input type="text" class="form-control" id="searchInput" placeholder="Tìm kiếm gói dịch vụ...">
                        </div>
                        <div class="col-md-2">
                            <select class="form-select" id="statusFilter">
                                <option value="">Tất cả trạng thái</option>
                                <option value="ACTIVE">Hoạt động</option>
                                <option value="INACTIVE">Không hoạt động</option>
                            </select>
                        </div>
                        <div class="col-md-2">
                            <select class="form-select" id="priceFilter">
                                <option value="">Tất cả giá</option>
                                <option value="0-500000">Dưới 500K</option>
                                <option value="500000-1000000">500K - 1M</option>
                                <option value="1000000-5000000">1M - 5M</option>
                                <option value="5000000-999999999">Trên 5M</option>
                            </select>
                        </div>
                        <div class="col-md-2">
                            <button class="btn btn-outline-secondary" id="filterBtn">
                                <i class="fas fa-filter"></i> Lọc
                            </button>
                        </div>
                    </div>

                    <!-- Table -->
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th><input type="checkbox" id="selectAll"></th>
                                    <th>Mã gói</th>
                                    <th>Tên gói</th>
                                    <th>Mô tả</th>
                                    <th>Giá</th>
                                    <th>Thời gian</th>
                                    <th>Trạng thái</th>
                                    <th>Thao tác</th>
                                </tr>
                            </thead>
                            <tbody id="servicePackagesTable">
                                <tr>
                                    <td><input type="checkbox"></td>
                                    <td>SP001</td>
                                    <td>Bảo dưỡng định kỳ</td>
                                    <td>Thay dầu, lọc gió, kiểm tra tổng thể</td>
                                    <td>800,000 VNĐ</td>
                                    <td>2-3 giờ</td>
                                    <td><span class="badge bg-success">Hoạt động</span></td>
                                    <td>
                                        <a href="/ServicePackages/Details/1" class="btn btn-sm btn-outline-info">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a href="/ServicePackages/Edit/1" class="btn btn-sm btn-outline-primary">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <button class="btn btn-sm btn-outline-danger" onclick="deleteServicePackage(1)">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </td>
                                </tr>
                                <tr>
                                    <td><input type="checkbox"></td>
                                    <td>SP002</td>
                                    <td>Sửa chữa khẩn cấp</td>
                                    <td>Sửa chữa các lỗi khẩn cấp, thay thế linh kiện</td>
                                    <td>2,500,000 VNĐ</td>
                                    <td>4-6 giờ</td>
                                    <td><span class="badge bg-success">Hoạt động</span></td>
                                    <td>
                                        <a href="/ServicePackages/Details/2" class="btn btn-sm btn-outline-info">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a href="/ServicePackages/Edit/2" class="btn btn-sm btn-outline-primary">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <button class="btn btn-sm btn-outline-danger" onclick="deleteServicePackage(2)">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>

                    <!-- Pagination -->
                    <nav aria-label="Page navigation">
                        <ul class="pagination justify-content-center">
                            <li class="page-item disabled">
                                <a class="page-link" href="#" tabindex="-1">Trước</a>
                            </li>
                            <li class="page-item active">
                                <a class="page-link" href="#">1</a>
                            </li>
                            <li class="page-item">
                                <a class="page-link" href="#">2</a>
                            </li>
                            <li class="page-item">
                                <a class="page-link" href="#">3</a>
                            </li>
                            <li class="page-item">
                                <a class="page-link" href="#">Sau</a>
                            </li>
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</div>

