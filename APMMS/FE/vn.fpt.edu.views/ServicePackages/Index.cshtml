@model vn.fpt.edu.viewmodels.ServicePackageIndexViewModel
@{
    ViewData["Title"] = "Danh sách gói dịch vụ";
    Layout = "~/vn.fpt.edu.views/Shared/_DashboardLayout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h4 class="mb-0">Danh sách gói dịch vụ</h4>
                    <a href="/ServicePackages/Create" class="btn btn-primary">
                        <i class="fas fa-plus"></i> Tạo gói mới
                    </a>
                </div>

                <div class="card-body">
                    <!-- Search and Filter -->
                    <div class="row mb-3">
                        <div class="col-md-4">
                            <input type="text" class="form-control" id="searchInput" placeholder="Tìm kiếm gói dịch vụ..." value="@Model.Search">
                        </div>
                        <div class="col-md-2">
                            <select class="form-select" id="statusFilter">
                                <option value="">Tất cả trạng thái</option>
                                <option value="ACTIVE" selected="@(Model.StatusCode == "ACTIVE" ? "selected" : null)">Hoạt động</option>
                                <option value="INACTIVE" selected="@(Model.StatusCode == "INACTIVE" ? "selected" : null)">Không hoạt động</option>
                            </select>
                        </div>
                        <div class="col-md-2">
                            <select class="form-select" id="priceFilter">
                                <option value="">Tất cả giá</option>
                                <option value="0-500000">Dưới 500K</option>
                                <option value="500000-1000000">500K - 1M</option>
                                <option value="1000000-5000000">1M - 5M</option>
                                <option value="5000000-999999999">Trên 5M</option>
                            </select>
                        </div>
                        <div class="col-md-2">
                            <button class="btn btn-outline-secondary" id="filterBtn">
                                <i class="fas fa-filter"></i> Lọc
                            </button>
                        </div>
                    </div>

                    <!-- Table -->
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th><input type="checkbox" id="selectAll"></th>
                                    <th>Mã gói</th>
                                    <th>Tên gói</th>
                                    <th>Mô tả</th>
                                    <th>Giá</th>
                                    <th>Chi nhánh</th>
                                    <th>Trạng thái</th>
                                    <th>Thao tác</th>
                                </tr>
                            </thead>
                            <tbody id="servicePackagesTable">
                                @if (Model.Items != null && Model.Items.Any())
                                {
                                    foreach (var item in Model.Items)
                                    {
                                        var badgeClass = item.StatusCode == "ACTIVE" ? "bg-success" : "bg-secondary";
                                        var statusText = item.StatusCode == "ACTIVE" ? "Hoạt động" : "Không hoạt động";

                                        <tr data-id="@item.Id">
                                            <td><input type="checkbox"></td>
                                            <td>@(item.Code ?? ("SP-" + item.Id))</td>
                                            <td>@item.Name</td>
                                            <td>@(item.Description ?? "-")</td>
                                            <td>@(item.Price?.ToString("N0") ?? "0") VNĐ</td>
                                            <td>@(item.BranchName ?? "-")</td>
                                            <td><span class="badge @badgeClass">@statusText</span></td>
                                            <td>
                                                <a href="/ServicePackages/Details/@item.Id" class="btn btn-sm btn-outline-info">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                                <a href="/ServicePackages/Edit/@item.Id" class="btn btn-sm btn-outline-primary">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                                <button class="btn btn-sm btn-outline-danger btn-delete" data-id="@item.Id">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="8" class="text-center text-muted">Không có dữ liệu</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(function () {
            $('#filterBtn').on('click', function () {
                const s = $('#searchInput').val();
                const st = $('#statusFilter').val();
                const q = [];
                if (s) q.push('search=' + encodeURIComponent(s));
                if (st) q.push('statusCode=' + encodeURIComponent(st));
                window.location = '/ServicePackages' + (q.length ? '?' + q.join('&') : '');
            });

            $('.btn-delete').on('click', function () {
                const id = $(this).data('id');
                if (!confirm('Bạn có chắc chắn muốn xóa gói dịch vụ này?')) return;
                $.post('/ServicePackages/Delete/' + id)
                    .done(res => { if (res.success) location.reload(); else alert('Không thể xóa'); })
                    .fail(() => alert('Lỗi server khi xóa'));
            });
        });
    </script>
}
