@model vn.fpt.edu.viewmodels.ServicePackageViewModel
@{
    ViewData["Title"] = "Chi tiết gói dịch vụ";
    Layout = "~/vn.fpt.edu.views/Shared/_DashboardLayout.cshtml";
}

<div class="container mt-3">
    <div class="card shadow-sm">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5><i class="fas fa-info-circle"></i> Chi tiết gói dịch vụ</h5>
            <a href="/ServicePackages" class="btn btn-outline-secondary btn-sm"><i class="fas fa-arrow-left"></i> Quay lại</a>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Mã gói</dt>
                <dd class="col-sm-9">@Model.Code</dd>

                <dt class="col-sm-3">Tên gói</dt>
                <dd class="col-sm-9">@Model.Name</dd>

                <dt class="col-sm-3">Mô tả</dt>
                <dd class="col-sm-9">@Model.Description</dd>

                <dt class="col-sm-3">Giá</dt>
                <dd class="col-sm-9">@Model.Price?.ToString("N0") VNĐ</dd>

                <dt class="col-sm-3">Chi nhánh</dt>
                <dd class="col-sm-9">@Model.BranchName</dd>

                <dt class="col-sm-3">Trạng thái</dt>
                <dd class="col-sm-9">
                    <span class="badge @(Model.StatusCode == "ACTIVE" ? "bg-success" : "bg-secondary")">
                        @(Model.StatusCode == "ACTIVE" ? "Hoạt động" : "Không hoạt động")
                    </span>
                </dd>
            </dl>
        </div>
    </div>
</div>
