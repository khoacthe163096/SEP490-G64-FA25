@{
    ViewData["Title"] = "Sửa chi nhánh";
    Layout = "~/vn.fpt.edu.views/Shared/_DashboardLayout.cshtml";
    var branchId = ViewBag.BranchId;
}

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-8 mx-auto">
            <div class="card shadow-sm mt-3">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">
                        <i class="fas fa-edit me-2"></i>Sửa chi nhánh
                    </h5>
                    <a href="/Branches" class="btn btn-light btn-sm">
                        <i class="fas fa-arrow-left"></i> Quay lại
                    </a>
                </div>
                <div class="card-body">
                    <form id="editForm">
                        <div class="mb-3">
                            <label class="form-label">Tên chi nhánh <span class="text-danger">*</span></label>
                            <input type="text" class="form-control" id="Name" name="Name" required 
                                   placeholder="Nhập tên chi nhánh" maxlength="255" />
                            <div class="invalid-feedback"></div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Số điện thoại</label>
                            <input type="text" class="form-control" id="Phone" name="Phone" 
                                   placeholder="Nhập số điện thoại (VD: 0912345678)" maxlength="20" 
                                   pattern="^(0[3|5|7|8|9])+([0-9]{8})$" />
                            <small class="form-text text-muted">Số điện thoại phải bắt đầu bằng 0 và có 10 chữ số</small>
                            <div class="invalid-feedback"></div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Địa chỉ</label>
                            <textarea class="form-control" id="Address" name="Address" rows="3" 
                                      placeholder="Nhập địa chỉ chi nhánh" maxlength="500"></textarea>
                            <div class="invalid-feedback"></div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Giá công lao động (VND)</label>
                            <input type="number" class="form-control" id="LaborRate" name="LaborRate" 
                                   placeholder="Nhập giá công lao động" min="0" step="1000" />
                            <small class="form-text text-muted">Giá công lao động tính theo VND</small>
                            <div class="invalid-feedback"></div>
                        </div>

                        <div class="d-flex justify-content-end gap-2">
                            <a href="/Branches" class="btn btn-secondary">
                                <i class="fas fa-times me-1"></i>Hủy
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-1"></i>Cập nhật
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        const API_BASE_URL = '@(ViewBag.ApiBaseUrl ?? "https://localhost:7173/api")';
        const BRANCH_ID = @branchId;

        document.addEventListener('DOMContentLoaded', async function() {
            await loadBranchData();
        });

        async function loadBranchData() {
            try {
                const token = localStorage.getItem('authToken');
                if (!token) {
                    showAlert('Vui lòng đăng nhập lại', 'warning');
                    window.location.href = '/Auth/Login';
                    return;
                }

                const response = await fetch(`${API_BASE_URL}/Branch/${BRANCH_ID}`, {
                    method: 'GET',
                    headers: {
                        'Content-Type': 'application/json',
                        'Authorization': `Bearer ${token}`
                    }
                });

                const result = await response.json();

                if (result.success && result.data) {
                    const branch = result.data;
                    document.getElementById('Name').value = branch.name || '';
                    document.getElementById('Phone').value = branch.phone || '';
                    document.getElementById('Address').value = branch.address || '';
                    document.getElementById('LaborRate').value = branch.laborRate || '';
                } else {
                    showAlert('Không thể tải thông tin chi nhánh', 'danger');
                    setTimeout(() => {
                        window.location.href = '/Branches';
                    }, 2000);
                }
            } catch (error) {
                console.error('Error loading branch:', error);
                showAlert('Lỗi khi tải thông tin chi nhánh: ' + error.message, 'danger');
            }
        }

        document.getElementById('editForm').addEventListener('submit', async function(e) {
            e.preventDefault();

            const form = this;
            const submitBtn = form.querySelector('button[type="submit"]');
            const originalText = submitBtn.innerHTML;
            
            // Disable submit button
            submitBtn.disabled = true;
            submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin me-1"></i>Đang cập nhật...';

            // Clear previous errors
            form.querySelectorAll('.is-invalid').forEach(el => el.classList.remove('is-invalid'));
            form.querySelectorAll('.invalid-feedback').forEach(el => el.textContent = '');

            try {
                const token = localStorage.getItem('authToken');
                if (!token) {
                    showAlert('Vui lòng đăng nhập lại', 'warning');
                    window.location.href = '/Auth/Login';
                    return;
                }

                const payload = {
                    name: document.getElementById('Name').value.trim(),
                    phone: document.getElementById('Phone').value.trim() || null,
                    address: document.getElementById('Address').value.trim() || null,
                    laborRate: document.getElementById('LaborRate').value ? parseFloat(document.getElementById('LaborRate').value) : null
                };

                const response = await fetch(`${API_BASE_URL}/Branch/${BRANCH_ID}`, {
                    method: 'PUT',
                    headers: {
                        'Content-Type': 'application/json',
                        'Authorization': `Bearer ${token}`
                    },
                    body: JSON.stringify(payload)
                });

                const result = await response.json();

                if (result.success) {
                    showAlert('Cập nhật chi nhánh thành công!', 'success');
                    setTimeout(() => {
                        window.location.href = '/Branches';
                    }, 1500);
                } else {
                    // Display validation errors
                    if (result.errors && Array.isArray(result.errors)) {
                        result.errors.forEach(error => {
                            showAlert(error, 'danger');
                        });
                    } else {
                        showAlert(result.message || 'Không thể cập nhật chi nhánh', 'danger');
                    }
                }
            } catch (error) {
                console.error('Error updating branch:', error);
                showAlert('Lỗi khi cập nhật chi nhánh: ' + error.message, 'danger');
            } finally {
                submitBtn.disabled = false;
                submitBtn.innerHTML = originalText;
            }
        });

        function showAlert(message, type = 'info') {
            const alertDiv = document.createElement('div');
            alertDiv.className = `alert alert-${type} alert-dismissible fade show position-fixed`;
            alertDiv.style.cssText = 'top: 20px; right: 20px; z-index: 9999; min-width: 300px; box-shadow: 0 4px 6px rgba(0,0,0,0.1);';
            alertDiv.innerHTML = `
                <i class="fas fa-${type === 'success' ? 'check-circle' : type === 'danger' ? 'exclamation-circle' : type === 'warning' ? 'exclamation-triangle' : 'info-circle'} me-2"></i>${message}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            `;
            document.body.appendChild(alertDiv);

            setTimeout(() => {
                if (alertDiv.parentNode) {
                    alertDiv.remove();
                }
            }, 3000);
        }
    </script>
}

