@section Scripts {
    <style>
        .employee-dropdown {
            position: absolute;
            top: 100%;
            left: 0;
            right: 0;
            background: white;
            border: 1px solid #ced4da;
            border-radius: 0.375rem;
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
            z-index: 1000;
            max-height: 300px;
            overflow-y: auto;
            margin-top: 2px;
        }
        
        .employee-list {
            padding: 0;
        }
        
        .employee-item {
            padding: 10px 15px;
            cursor: pointer;
            border-bottom: 1px solid #f0f0f0;
            transition: background-color 0.2s;
        }
        
        .employee-item:hover {
            background-color: #f8f9fa;
        }
        
        .employee-item:last-child {
            border-bottom: none;
        }
        
        .employee-item.selected {
            background-color: #e7f3ff;
        }
        
        .employee-name {
            font-weight: 500;
            color: #212529;
            margin-bottom: 2px;
        }
        
        .employee-role {
            font-size: 0.875rem;
            color: #6c757d;
            margin-bottom: 2px;
        }
        
        .employee-contact {
            font-size: 0.875rem;
            color: #6c757d;
        }
        
        .no-results {
            padding: 15px;
            text-align: center;
            color: #6c757d;
            font-style: italic;
        }
    </style>
    <script>
        const API_BASE_URL = '@(ViewBag.ApiBaseUrl ?? "https://localhost:7173/api")';
        const BRANCH_ID = @branchId;
        
        // L∆∞u danh s√°ch employees ƒë·ªÉ search
        let allEmployees = [];

        document.addEventListener('DOMContentLoaded', async function() {
            await loadBranchDetails();
        });

        async function loadBranchDetails() {
            try {
                const token = localStorage.getItem('authToken');
                if (!token) {
                    showAlert('Vui l√≤ng ƒëƒÉng nh·∫≠p l·∫°i', 'warning');
                    window.location.href = '/Auth/Login';
                    return;
                }

                const response = await fetch(`${API_BASE_URL}/Branch/${BRANCH_ID}`, {
                    method: 'GET',
                    headers: {
                        'Content-Type': 'application/json',
                        'Authorization': `Bearer ${token}`
                    }
                });

                const result = await response.json();

                if (result.success && result.data) {
                    const branch = result.data;
                    
                    document.getElementById('branchName').textContent = branch.name || 'N/A';
                    document.getElementById('branchPhone').textContent = branch.phone || 'N/A';
                    document.getElementById('branchAddress').textContent = branch.address || 'N/A';
                    
                    const laborRate = branch.laborRate ? 
                        new Intl.NumberFormat('vi-VN', { style: 'currency', currency: 'VND' }).format(branch.laborRate) : 
                        'N/A';
                    document.getElementById('branchLaborRate').textContent = laborRate;

                    // Display director information
                    if (branch.director) {
                        const director = branch.director;
                        const fullName = `${director.firstName || ''} ${director.lastName || ''}`.trim() || director.username || 'N/A';
                        document.getElementById('directorName').textContent = fullName;
                        const details = [];
                        if (director.email) details.push(`Email: ${director.email}`);
                        if (director.phone) details.push(`SƒêT: ${director.phone}`);
                        document.getElementById('directorDetails').textContent = details.join(' | ') || '';
                        document.getElementById('directorInfo').style.display = 'block';
                        document.getElementById('noDirector').style.display = 'none';
                    } else {
                        document.getElementById('directorInfo').style.display = 'none';
                        document.getElementById('noDirector').style.display = 'block';
                    }

                    document.getElementById('loadingState').style.display = 'none';
                    document.getElementById('branchDetails').style.display = 'block';
                } else {
                    document.getElementById('loadingState').style.display = 'none';
                    document.getElementById('errorState').style.display = 'block';
                    showAlert('Kh√¥ng th·ªÉ t·∫£i th√¥ng tin chi nh√°nh', 'danger');
                }
            } catch (error) {
                console.error('Error loading branch details:', error);
                document.getElementById('loadingState').style.display = 'none';
                document.getElementById('errorState').style.display = 'block';
                showAlert('L·ªói khi t·∫£i th√¥ng tin chi nh√°nh: ' + error.message, 'danger');
            }
        }

        function showAlert(message, type = 'info') {
            const alertDiv = document.createElement('div');
            alertDiv.className = `alert alert-${type} alert-dismissible fade show position-fixed`;
            alertDiv.style.cssText = 'top: 20px; right: 20px; z-index: 9999; min-width: 300px; box-shadow: 0 4px 6px rgba(0,0,0,0.1);';
            alertDiv.innerHTML = `
                <i class="fas fa-${type === 'success' ? 'check-circle' : type === 'danger' ? 'exclamation-circle' : type === 'warning' ? 'exclamation-triangle' : 'info-circle'} me-2"></i>${message}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            `;
            document.body.appendChild(alertDiv);

            setTimeout(() => {
                if (alertDiv.parentNode) {
                    alertDiv.remove();
                }
            }, 3000);
        }

        // Load employees for director selection
        async function loadEmployeesForDirector() {
            try {
                const token = localStorage.getItem('authToken');
                if (!token) return;

                // Get all employees, we'll filter by branchId on frontend
                const response = await fetch(`${API_BASE_URL}/Employee?page=1&pageSize=1000`, {
                    method: 'GET',
                    headers: {
                        'Content-Type': 'application/json',
                        'Authorization': `Bearer ${token}`
                    }
                });

                const result = await response.json();
                console.log('Employee API response:', result);

                // Handle different response formats
                let employees = [];
                if (result.success && result.data) {
                    // Check if data has items property (paged response)
                    if (result.data.items && Array.isArray(result.data.items)) {
                        employees = result.data.items;
                    } 
                    // Check if data is directly an array
                    else if (Array.isArray(result.data)) {
                        employees = result.data;
                    }
                } else if (Array.isArray(result)) {
                    // Direct array response
                    employees = result;
                }

                console.log('Total employees from API:', employees.length);
                console.log('BRANCH_ID:', BRANCH_ID, 'Type:', typeof BRANCH_ID);

                // Filter employees by branchId and exclude current director (roleId = 2)
                allEmployees = employees.filter(emp => {
                    // Convert to numbers for comparison
                    const empBranchId = emp.branchId ? Number(emp.branchId) : null;
                    const empRoleId = emp.roleId ? Number(emp.roleId) : null;
                    const branchIdNum = Number(BRANCH_ID);
                    
                    const match = empBranchId === branchIdNum && 
                                 empRoleId !== 2 && // Exclude current directors
                                 emp.statusCode === 'ACTIVE';
                    
                    if (match) {
                        console.log('‚úÖ Matched employee:', emp.firstName, emp.lastName, 'BranchId:', empBranchId, 'RoleId:', empRoleId);
                    } else {
                        console.log('‚ùå Not matched:', emp.firstName, emp.lastName, 'BranchId:', empBranchId, 'Expected:', branchIdNum, 'RoleId:', empRoleId, 'Status:', emp.statusCode);
                    }
                    return match;
                });
                
                console.log('‚úÖ Filtered employees for director selection:', allEmployees.length);
                if (allEmployees.length > 0) {
                    console.log('All employees array:', allEmployees);
                } else {
                    console.warn('‚ö†Ô∏è No employees found! Check filters.');
                }
            } catch (error) {
                console.error('Error loading employees:', error);
                allEmployees = [];
            }
        }
        
        // H√†m t√¨m ki·∫øm nh√¢n vi√™n
        function searchEmployees(query) {
            if (!query || query.trim() === '') {
                return [];
            }
            
            const searchTerm = query.toLowerCase().trim();
            return allEmployees.filter(emp => {
                const fullName = `${emp.firstName || ''} ${emp.lastName || ''}`.trim().toLowerCase();
                const username = (emp.username || '').toLowerCase();
                const email = (emp.email || '').toLowerCase();
                const phone = (emp.phone || '').toLowerCase();
                const roleName = (emp.roleName || '').toLowerCase();
                
                return fullName.includes(searchTerm) || 
                       username.includes(searchTerm) ||
                       email.includes(searchTerm) || 
                       phone.includes(searchTerm) ||
                       roleName.includes(searchTerm);
            });
        }
        
        // Hi·ªÉn th·ªã dropdown v·ªõi k·∫øt qu·∫£ t√¨m ki·∫øm
        function displayEmployeeResults(results) {
            const dropdown = document.getElementById('employeeDropdown');
            const list = document.getElementById('employeeList');
            
            list.innerHTML = '';
            
            if (results.length === 0) {
                list.innerHTML = '<div class="no-results">Kh√¥ng t√¨m th·∫•y nh√¢n vi√™n n√†o</div>';
                dropdown.style.display = 'block';
                return;
            }
            
            results.forEach(emp => {
                const fullName = `${emp.firstName || ''} ${emp.lastName || ''}`.trim() || emp.username || 'N/A';
                const item = document.createElement('div');
                item.className = 'employee-item';
                item.setAttribute('data-employee-id', emp.id);
                
                item.innerHTML = `
                    <div class="employee-name">${escapeHtml(fullName)}</div>
                    <div class="employee-role">${escapeHtml(emp.roleName || 'N/A')}</div>
                    ${emp.email || emp.phone ? `<div class="employee-contact">${emp.email ? `üìß ${escapeHtml(emp.email)}` : ''} ${emp.phone ? `üìû ${escapeHtml(emp.phone)}` : ''}</div>` : ''}
                `;
                
                item.addEventListener('click', function() {
                    selectEmployee(emp);
                });
                
                list.appendChild(item);
            });
            
            dropdown.style.display = 'block';
        }
        
        // Ch·ªçn nh√¢n vi√™n
        function selectEmployee(emp) {
            const fullName = `${emp.firstName || ''} ${emp.lastName || ''}`.trim() || emp.username || 'N/A';
            document.getElementById('employeeSearch').value = fullName;
            document.getElementById('newDirectorId').value = emp.id;
            document.getElementById('employeeDropdown').style.display = 'none';
        }
        
        function escapeHtml(text) {
            const div = document.createElement('div');
            div.textContent = text;
            return div.innerHTML;
        }

        // Load current director info for modal
        async function loadCurrentDirectorForModal() {
            try {
                const token = localStorage.getItem('authToken');
                if (!token) return;

                const response = await fetch(`${API_BASE_URL}/Branch/${BRANCH_ID}/Director`, {
                    method: 'GET',
                    headers: {
                        'Content-Type': 'application/json',
                        'Authorization': `Bearer ${token}`
                    }
                });

                const result = await response.json();
                const currentDirectorDiv = document.getElementById('currentDirectorInfo');
                const currentDirectorName = document.getElementById('currentDirectorName');

                if (result.success && result.data) {
                    const director = result.data;
                    const fullName = `${director.firstName || ''} ${director.lastName || ''}`.trim() || director.username || 'N/A';
                    currentDirectorName.textContent = fullName;
                    currentDirectorDiv.style.display = 'block';
                } else {
                    currentDirectorDiv.style.display = 'none';
                }
            } catch (error) {
                console.error('Error loading current director:', error);
            }
        }

        // Handle toggle between select and create
        document.querySelectorAll('input[name="directorOption"]').forEach(radio => {
            radio.addEventListener('change', function() {
                if (this.value === 'select') {
                    document.getElementById('selectEmployeeSection').style.display = 'block';
                    document.getElementById('createEmployeeSection').style.display = 'none';
                    document.getElementById('employeeSearch').required = true;
                } else {
                    document.getElementById('selectEmployeeSection').style.display = 'none';
                    document.getElementById('createEmployeeSection').style.display = 'block';
                    document.getElementById('employeeSearch').required = false;
                }
                // Reset values
                document.getElementById('employeeSearch').value = '';
                document.getElementById('newDirectorId').value = '';
                document.getElementById('employeeDropdown').style.display = 'none';
                document.getElementById('createEmployeeForm').reset();
            });
        });

        // Handle modal open
        document.getElementById('changeDirectorModal')?.addEventListener('show.bs.modal', async function() {
            // Reset to select option
            document.getElementById('selectEmployeeOption').checked = true;
            document.getElementById('selectEmployeeSection').style.display = 'block';
            document.getElementById('createEmployeeSection').style.display = 'none';
            
