@{
    ViewData["Title"] = "Danh sách hóa đơn";
    Layout = "~/vn.fpt.edu.views/Shared/_DashboardLayout.cshtml";
    var apiBaseUrl = ViewBag.ApiBaseUrl ?? "https://localhost:7173/api";
}

<style>
    .invoice-card {
        border-radius: 1rem;
        box-shadow: var(--bs-box-shadow-sm);
    }

    .invoice-card .card-header {
        border-top-left-radius: 1rem;
        border-top-right-radius: 1rem;
        background: linear-gradient(135deg, rgba(13, 110, 253, 0.06), rgba(111, 66, 193, 0.08));
        border-bottom: none;
    }

    .invoice-card table thead {
        background-color: rgba(13, 110, 253, 0.05);
        font-size: 0.85rem;
        text-transform: uppercase;
        letter-spacing: 0.04em;
    }

    .invoice-card table tbody tr td {
        vertical-align: middle;
        font-size: 0.95rem;
    }

    .badge-status {
        padding: 0.35rem 0.75rem;
        border-radius: 999px;
        font-size: 0.8rem;
        font-weight: 500;
    }

    .badge-status.pending {
        background: rgba(255, 193, 7, 0.15);
        color: #b78000;
    }

    .badge-status.paid {
        background: rgba(25, 135, 84, 0.15);
        color: #157347;
    }

    .list-empty-state {
        text-align: center;
        padding: 3rem 1rem;
        color: var(--bs-secondary);
    }

    .list-empty-state i {
        font-size: 2.2rem;
        margin-bottom: 0.75rem;
    }

    .search-box {
        max-width: 260px;
    }

    .items-per-page {
        width: 75px;
    }

    @@media (max-width: 767.98px) {
        .invoice-card .card-header {
            flex-direction: column;
            align-items: stretch !important;
            gap: 0.75rem;
        }

        .search-box {
            max-width: 100%;
        }
    }
</style>

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card invoice-card">
                <div class="card-header d-flex flex-wrap gap-3 justify-content-between align-items-center py-3">
                    <div>
                        <h4 class="mb-0">
                            <i class="fas fa-file-invoice-dollar me-2"></i>
                            Danh sách hóa đơn
                        </h4>
                        <small class="text-muted">Chỉ hiển thị các phiếu bảo dưỡng đã hoàn thành</small>
                    </div>
                    <div class="d-flex flex-wrap gap-2 align-items-center">
                        <div class="search-box">
                            <div class="input-group input-group-sm">
                                <span class="input-group-text"><i class="fas fa-search"></i></span>
                                <input type="text" class="form-control" id="searchInput" placeholder="Tìm mã, khách hàng...">
                            </div>
                        </div>
                        <select class="form-select form-select-sm" id="statusFilter" style="max-width: 180px;">
                            <option value="">Tất cả trạng thái</option>
                            <option value="PENDING">Chưa thanh toán</option>
                            <option value="PAID">Đã thanh toán</option>
                        </select>
                        <a href="/TotalReceipts/Create" class="btn btn-primary btn-sm">
                            <i class="fas fa-plus me-1"></i>
                            Tạo hóa đơn
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead>
                                <tr>
                                    <th class="text-center" style="width: 60px;">STT</th>
                                    <th style="width: 200px;">Mã hóa đơn</th>
                                    <th>Tên khách hàng</th>
                                    <th class="text-end" style="width: 160px;">Tổng tiền</th>
                                    <th style="width: 150px;">Ngày tạo</th>
                                    <th style="width: 150px;">Trạng thái</th>
                                </tr>
                            </thead>
                            <tbody id="receiptTableBody">
                                <!-- Dynamic rows -->
                            </tbody>
                        </table>
                    </div>
                    <div id="emptyState" class="list-empty-state" style="display:none;">
                        <i class="fas fa-inbox"></i>
                        <h6 class="fw-semibold mb-1">Chưa có hóa đơn phù hợp</h6>
                        <p class="mb-0">Hoàn thành phiếu bảo dưỡng để tạo hóa đơn tương ứng.</p>
                    </div>
                    <div class="d-flex flex-wrap justify-content-between align-items-center mt-3">
                        <div class="text-muted small" id="paginationInfo">
                            Hiển thị 0 - 0 / 0 hóa đơn
                        </div>
                        <div class="d-flex flex-wrap align-items-center gap-3">
                            <div class="input-group input-group-sm items-per-page">
                                <label class="input-group-text" for="pageSizeSelect">Hiển thị</label>
                                <select class="form-select" id="pageSizeSelect">
                                    <option value="5">5</option>
                                    <option value="10" selected>10</option>
                                    <option value="20">20</option>
                                </select>
                            </div>
                            <nav aria-label="Pagination">
                                <ul class="pagination pagination-sm mb-0" id="pagination"></ul>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        const API_BASE_URL = '@apiBaseUrl';
        let allReceipts = [];
        let filteredReceipts = [];
        let currentPage = 1;
        let pageSize = 10;

        const fallbackData = [
            {
                id: 1,
                code: 'INV7B90F1',
                customerName: 'Quách Thành Trung',
                totalAmount: 12650000,
                createdDate: '2024-08-19T03:16:41Z',
                statusCode: 'PENDING'
            },
            {
                id: 2,
                code: 'INV51C4Z2',
                customerName: 'Đỗ Trung Lâm',
                totalAmount: 5403000,
                createdDate: '2024-08-19T00:28:25Z',
                statusCode: 'PENDING'
            },
            {
                id: 3,
                code: 'INV90A3K8',
                customerName: 'Trần Trung Đức',
                totalAmount: 12574300,
                createdDate: '2024-08-18T23:11:34Z',
                statusCode: 'PAID'
            }
        ];

        $(document).ready(function () {
            attachEvents();
            loadReceipts();
        });

        function attachEvents() {
            let searchTimeout;
            $('#searchInput').on('input', function () {
                clearTimeout(searchTimeout);
                searchTimeout = setTimeout(() => {
                    currentPage = 1;
                    applyFilters();
                }, 300);
            });

            $('#statusFilter').on('change', function () {
                currentPage = 1;
                applyFilters();
            });

            $('#pageSizeSelect').on('change', function () {
                pageSize = parseInt($(this).val(), 10) || 10;
                currentPage = 1;
                renderTable();
            });
        }

        function loadReceipts() {
            const token = localStorage.getItem('authToken');
            toggleLoading(true);

            fetch(`${API_BASE_URL}/MaintenanceTicket?page=1&pageSize=500`, {
                headers: {
                    'Authorization': token ? `Bearer ${token}` : '',
                    'Content-Type': 'application/json'
                }
            })
                .then(async response => {
                    if (!response.ok) {
                        throw new Error(`HTTP ${response.status}`);
                    }
                    return response.json();
                })
                .then(result => {
                    if (result.success && Array.isArray(result.data)) {
                        allReceipts = result.data
                            .filter(ticket => ticket.statusCode === 'COMPLETED')
                            .map(mapTicketToReceipt);
                    } else {
                        allReceipts = fallbackData;
                        showAlert('Tạm thời hiển thị dữ liệu mẫu.', 'warning');
                    }
                    applyFilters();
                })
                .catch(error => {
                    console.error('loadReceipts error:', error);
                    allReceipts = fallbackData;
                    showAlert('Không thể tải dữ liệu hóa đơn. Đang dùng dữ liệu mẫu.', 'danger');
                    applyFilters();
                })
                .finally(() => toggleLoading(false));
        }

        function mapTicketToReceipt(ticket) {
            const fallbackCode = generateInvoiceCode(ticket.id);
            const candidateCode = ticket.totalReceiptCode || ticket.code;
            const code = ensureInvoiceFormat(candidateCode, fallbackCode);

            return {
                id: ticket.id,
                code: code,
                customerName: ticket.customerName || 'N/A',
                totalAmount: ticket.totalEstimatedCost ?? ticket.totalCost ?? ticket.grandTotal ?? 0,
                createdDate: ticket.createdDate,
                statusCode: ticket.invoiceStatus || (ticket.isPaid ? 'PAID' : 'PENDING')
            };
        }

        function applyFilters() {
            const search = $('#searchInput').val().trim().toLowerCase();
            const status = $('#statusFilter').val();

            filteredReceipts = allReceipts.filter(receipt => {
                const matchSearch = !search ||
                    (receipt.code && receipt.code.toLowerCase().includes(search)) ||
                    (receipt.customerName && receipt.customerName.toLowerCase().includes(search));

                const matchStatus = !status || receipt.statusCode === status;

                return matchSearch && matchStatus;
            });

            filteredReceipts.sort((a, b) => {
                const dateA = a.createdDate ? new Date(a.createdDate) : new Date(0);
                const dateB = b.createdDate ? new Date(b.createdDate) : new Date(0);
                return dateB - dateA;
            });

            renderTable();
        }

        function renderTable() {
            const total = filteredReceipts.length;
            const tbody = $('#receiptTableBody');
            tbody.empty();

            if (total === 0) {
                $('#emptyState').show();
                updatePaginationInfo(0, 0, 0);
                renderPagination(0);
                return;
            }

            $('#emptyState').hide();
            const start = (currentPage - 1) * pageSize;
            const paginated = filteredReceipts.slice(start, start + pageSize);

            paginated.forEach((receipt, index) => {
                const displayIndex = start + index + 1;
                const amountText = formatCurrency(receipt.totalAmount);
                const statusHtml = renderStatusBadge(receipt.statusCode);

                tbody.append(`
                    <tr>
                        <td class="text-center">${displayIndex}</td>
                        <td class="fw-semibold">${escapeHtml(receipt.code)}</td>
                        <td>${escapeHtml(receipt.customerName)}</td>
                        <td class="text-end">${amountText}</td>
                        <td>${formatDate(receipt.createdDate)}</td>
                        <td>${statusHtml}</td>
                    </tr>
                `);
            });

            updatePaginationInfo(start + 1, Math.min(start + pageSize, total), total);
            renderPagination(total);
        }

        function renderPagination(totalItems) {
            const pagination = $('#pagination');
            pagination.empty();
            const totalPages = Math.max(1, Math.ceil(totalItems / pageSize));

            const createItem = (page, label, disabled = false, active = false) => `
                <li class="page-item ${disabled ? 'disabled' : ''} ${active ? 'active' : ''}">
                    <a class="page-link" href="#" data-page="${page}">${label}</a>
                </li>`;

            pagination.append(createItem(currentPage - 1, '&lsaquo;', currentPage === 1));

            for (let page = 1; page <= totalPages; page++) {
                if (totalPages > 6) {
                    if (page === 1 || page === totalPages || Math.abs(page - currentPage) <= 1) {
                        pagination.append(createItem(page, page, false, page === currentPage));
                    } else if (page === 2 && currentPage > 3) {
                        pagination.append('<li class="page-item disabled"><span class="page-link">...</span></li>');
                    } else if (page === totalPages - 1 && currentPage < totalPages - 2) {
                        pagination.append('<li class="page-item disabled"><span class="page-link">...</span></li>');
                    }
                } else {
                    pagination.append(createItem(page, page, false, page === currentPage));
                }
            }

            pagination.append(createItem(currentPage + 1, '&rsaquo;', currentPage === totalPages));

            pagination.find('.page-link').off('click').on('click', function (e) {
                e.preventDefault();
                const page = parseInt($(this).data('page'), 10);
                if (!Number.isNaN(page) && page >= 1 && page <= totalPages && page !== currentPage) {
                    currentPage = page;
                    renderTable();
                }
            });
        }

        function updatePaginationInfo(start, end, total) {
            $('#paginationInfo').text(`Hiển thị ${total === 0 ? 0 : start} - ${total === 0 ? 0 : end} / ${total} hóa đơn`);
        }

        function ensureInvoiceFormat(code, fallback) {
            if (!code) return fallback;
            const normalized = code.toString().trim().toUpperCase();
            if (/^INV[0-9A-Z]{6}$/.test(normalized)) {
                return normalized;
            }
            return fallback;
        }

        function generateInvoiceCode(seed) {
            const chars = 'ABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789';
            let value = Number.isFinite(seed) ? seed : Date.now();
            if (!(value > 0)) {
                value = Math.floor(Math.random() * 1_000_000) + 1;
            }
            let result = '';
            for (let i = 0; i < 6; i++) {
                value = (value * 9301 + 49297) % 233280;
                result += chars[value % chars.length];
            }
            return `INV${result}`;
        }

        function renderStatusBadge(statusCode) {
            const norm = (statusCode || '').toUpperCase();
            if (norm === 'PAID') {
                return '<span class="badge-status paid">Đã thanh toán</span>';
            }
            return '<span class="badge-status pending">Chưa thanh toán</span>';
        }

        function formatCurrency(value) {
            return new Intl.NumberFormat('vi-VN', { style: 'currency', currency: 'VND' }).format(value || 0);
        }

        function formatDate(value) {
            if (!value) return '<span class="text-muted">-</span>';
            const date = new Date(value);
            if (Number.isNaN(date)) return '<span class="text-muted">-</span>';
            return `${date.toLocaleDateString('vi-VN')} ${date.toLocaleTimeString('vi-VN', { hour: '2-digit', minute: '2-digit', second: '2-digit' })}`;
        }

        function escapeHtml(str) {
            return $('<div>').text(str || '').html();
        }

        function toggleLoading(isLoading) {
            if (isLoading) {
                $('#receiptTableBody').html(`
                    <tr>
                        <td colspan="6" class="text-center py-4">
                            <div class="spinner-border text-primary" role="status">
                                <span class="visually-hidden">Đang tải...</span>
                            </div>
                        </td>
                    </tr>`);
                $('#emptyState').hide();
            }
        }

        function showAlert(message, type = 'info') {
            const id = `alert-${Date.now()}`;
            const html = `
                <div id="${id}" class="alert alert-${type} alert-dismissible fade show position-fixed" role="alert"
                    style="top: 20px; right: 20px; z-index: 9999; min-width: 280px;">
                    ${message}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>`;
            $('body').append(html);
            setTimeout(() => $(`#${id}`).alert('close'), 3000);
        }
    </script>
}
