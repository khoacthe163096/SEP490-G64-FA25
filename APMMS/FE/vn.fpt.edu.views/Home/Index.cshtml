@{
    ViewData["Title"] = "Trang chủ";
}

<!-- Hero Section -->
<section class="hero-section">
    <div class="hero-background">
        <div class="hero-overlay"></div>
    </div>
    
    <div class="container">
        <div class="row align-items-center min-vh-100">
            <div class="col-lg-6">
                <div class="hero-content">
                    <h1 class="hero-title">
                        <span class="hero-brand">APMMS</span>
                    </h1>
                    <h2 class="hero-subtitle">
                        HỆ THỐNG QUẢN LÝ PHỤ TÙNG & BẢO DƯỠNG Ô TÔ
                    </h2>
                    <p class="hero-description">
                        Giải pháp toàn diện cho việc quản lý xe, phụ tùng và lịch bảo dưỡng. 
                        Tối ưu hóa quy trình, tiết kiệm thời gian và chi phí.
                    </p>
                    <div class="hero-buttons">
                        <a href="#features" class="btn btn-outline-light btn-lg">
                            <i class="fas fa-info-circle"></i> Tìm hiểu thêm
                        </a>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="hero-image">
                    <div class="truck-container">
                        <div class="truck">
                            <div class="truck-cab"></div>
                            <div class="truck-trailer"></div>
                            <div class="truck-wheels">
                                <div class="wheel"></div>
                                <div class="wheel"></div>
                                <div class="wheel"></div>
                                <div class="wheel"></div>
                            </div>
                        </div>
                        <div class="road-lines"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Features Section -->
<section id="features" class="features-section py-5">
    <div class="container">
        <div class="row">
            <div class="col-lg-4 mb-4">
                <div class="feature-card">
                    <div class="feature-icon">
                        <i class="fas fa-car"></i>
                    </div>
                    <h4>Quản lý Xe</h4>
                    <p>Theo dõi thông tin xe, lịch sử bảo dưỡng và trạng thái hoạt động một cách chi tiết.</p>
                </div>
            </div>
            <div class="col-lg-4 mb-4">
                <div class="feature-card">
                    <div class="feature-icon">
                        <i class="fas fa-wrench"></i>
                    </div>
                    <h4>Bảo dưỡng Thông minh</h4>
                    <p>Lịch bảo dưỡng tự động, nhắc nhở và quản lý quy trình bảo dưỡng hiệu quả.</p>
                </div>
            </div>
            <div class="col-lg-4 mb-4">
                <div class="feature-card">
                    <div class="feature-icon">
                        <i class="fas fa-boxes"></i>
                    </div>
                    <h4>Kho Phụ tùng</h4>
                    <p>Quản lý tồn kho, đặt hàng tự động và theo dõi chi phí phụ tùng.</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Login Modal -->
@await Html.PartialAsync("~/vn.fpt.edu.views/Auth/Login.cshtml")

@section Scripts {
    <script>
        $(document).ready(function() {
            console.log('Home page loaded, jQuery version:', $.fn.jquery);
            
            // Test if form exists
            console.log('Login form exists:', $('#loginForm').length > 0);
            console.log('Username input exists:', $('#username').length > 0);
            console.log('Password input exists:', $('#password').length > 0);
            
            // Manual form binding for testing
            $('#loginForm').off('submit').on('submit', function(e) {
                console.log('Manual form submit handler triggered');
                e.preventDefault();
                
                const username = $('#username').val();
                const password = $('#password').val();
                
                console.log('Manual handler - Username:', username);
                console.log('Manual handler - Password length:', password ? password.length : 0);
                
                if (!username || !password) {
                    alert('Vui lòng nhập đầy đủ thông tin đăng nhập');
                    return false;
                }
                
                // Call the existing handleLogin function
                handleLogin();
                return false;
            });
        });
    </script>
}
