@{
    ViewData["Title"] = "Đặt lịch hẹn mới";
    Layout = "~/vn.fpt.edu.views/Shared/_DashboardLayout.cshtml";
    var apiBaseUrl = ViewBag.ApiBaseUrl ?? "https://localhost:7173/api";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="mb-0">
                        <i class="fas fa-calendar-plus me-2"></i>
                        Đặt lịch hẹn mới
                    </h4>
                </div>
                <div class="card-body">
                    <form id="scheduleForm">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label for="userId" class="form-label">Khách hàng <span class="text-danger">*</span></label>
                                    <select class="form-select" id="userId" required>
                                        <option value="">Chọn khách hàng</option>
                                    </select>
                                    <small class="form-text text-muted">Chọn khách hàng đặt lịch</small>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label for="carId" class="form-label">Xe <span class="text-danger">*</span></label>
                                    <select class="form-select" id="carId" required>
                                        <option value="">Chọn xe (chọn khách hàng trước)</option>
                                    </select>
                                    <small class="form-text text-muted">Chọn xe cần bảo dưỡng</small>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label for="branchId" class="form-label">Chi nhánh <span class="text-danger">*</span></label>
                                    <select class="form-select" id="branchId" required>
                                        <option value="">Chọn chi nhánh</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label for="scheduledDate" class="form-label">Ngày và giờ hẹn <span class="text-danger">*</span></label>
                                    <input type="datetime-local" class="form-control" id="scheduledDate" required>
                                    <small class="form-text text-muted">Chọn ngày và giờ muốn đặt lịch</small>
                                </div>
                            </div>
                        </div>

                        <div class="alert alert-info">
                            <i class="fas fa-info-circle me-2"></i>
                            <strong>Lưu ý:</strong> Lịch hẹn phải được đặt ít nhất 1 ngày trước thời điểm hẹn.
                        </div>

                        <div class="d-flex justify-content-between">
                            <a href="/ServiceSchedules" class="btn btn-secondary">
                                <i class="fas fa-arrow-left me-1"></i>
                                Quay lại
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-1"></i>
                                Đặt lịch
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        const API_BASE_URL = '@apiBaseUrl';

        $(document).ready(function() {
            loadUsers();
            loadBranches();
            
            // Set min date to tomorrow
            const tomorrow = new Date();
            tomorrow.setDate(tomorrow.getDate() + 1);
            const minDate = tomorrow.toISOString().slice(0, 16);
            $('#scheduledDate').attr('min', minDate);

            // Load cars when user is selected
            $('#userId').on('change', function() {
                const userId = $(this).val();
                if (userId) {
                    loadCarsByUserId(userId);
                } else {
                    $('#carId').html('<option value="">Chọn xe (chọn khách hàng trước)</option>');
                }
            });

            $('#scheduleForm').on('submit', function(e) {
                e.preventDefault();
                createSchedule();
            });
        });

        function loadUsers() {
            const token = localStorage.getItem('authToken');
            fetch(`${API_BASE_URL}/AutoOwner`, {
                headers: {
                    'Authorization': token ? `Bearer ${token}` : '',
                    'Content-Type': 'application/json'
                }
            })
            .then(response => response.json())
            .then(result => {
                if (result.success && result.data) {
                    const select = $('#userId');
                    result.data.forEach(user => {
                        const name = `${user.firstName || ''} ${user.lastName || ''}`.trim() || user.email || 'N/A';
                        select.append(`<option value="${user.id}">${name} - ${user.email || ''}</option>`);
                    });
                }
            })
            .catch(error => {
                console.error('Error loading users:', error);
            });
        }

        function loadCarsByUserId(userId) {
            const token = localStorage.getItem('authToken');
            fetch(`${API_BASE_URL}/CarOfAutoOwner/by-user/${userId}`, {
                headers: {
                    'Authorization': token ? `Bearer ${token}` : '',
                    'Content-Type': 'application/json'
                }
            })
            .then(response => response.json())
            .then(result => {
                const select = $('#carId');
                select.html('<option value="">Chọn xe</option>');
                if (result.success && result.data) {
                    result.data.forEach(car => {
                        const label = `${car.carName || 'N/A'} - ${car.licensePlate || 'N/A'}`;
                        select.append(`<option value="${car.id}">${label}</option>`);
                    });
                }
            })
            .catch(error => {
                console.error('Error loading cars:', error);
            });
        }

        function loadBranches() {
            const token = localStorage.getItem('authToken');
            fetch(`${API_BASE_URL}/Branch`, {
                headers: {
                    'Authorization': token ? `Bearer ${token}` : '',
                    'Content-Type': 'application/json'
                }
            })
            .then(response => response.json())
            .then(result => {
                if (result.success && result.data) {
                    const select = $('#branchId');
                    result.data.forEach(branch => {
                        select.append(`<option value="${branch.id}">${branch.name || 'N/A'}</option>`);
                    });
                }
            })
            .catch(error => {
                console.error('Error loading branches:', error);
            });
        }

        function createSchedule() {
            const token = localStorage.getItem('authToken');
            const scheduledDate = new Date($('#scheduledDate').val());

            const payload = {
                userId: parseInt($('#userId').val()),
                carId: parseInt($('#carId').val()),
                branchId: parseInt($('#branchId').val()),
                scheduledDate: scheduledDate.toISOString(),
                statusCode: 'PENDING'
            };

            fetch(`${API_BASE_URL}/ServiceSchedule`, {
                method: 'POST',
                headers: {
                    'Authorization': token ? `Bearer ${token}` : '',
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify(payload)
            })
            .then(async response => {
                const result = await response.json();
                if (result.success) {
                    alert('Đặt lịch hẹn thành công!');
                    window.location.href = '/ServiceSchedules';
                } else {
                    alert('Lỗi: ' + (result.message || 'Không thể đặt lịch hẹn'));
                }
            })
            .catch(error => {
                console.error('Error creating schedule:', error);
                alert('Lỗi khi đặt lịch hẹn');
            });
        }
    </script>
}

